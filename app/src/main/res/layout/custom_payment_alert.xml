<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable name="data" type="com.rezofy.models.ui.TrainVoucher"/>
    </data>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="false"
    android:id="@+id/root"
    app:cardElevation="0dp"
    >
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_10"
            >

            <TextView
                android:text="@string/billing_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textView2"
                android:textColor="@color/transparent_color"/>

            <com.rezofy.views.custom_views.IconTextView
                android:text="d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/tvClose"
                android:textColor="@color/transparent_color"/>
        </RelativeLayout>
      <!-- <android.support.v7.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="1dp"
           app:cardElevation="1dp"
           ></android.support.v7.widget.CardView>-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/spinner_row_color"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_8">

            <com.rezofy.views.custom_views.IconTextView
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_toLeftOf="@+id/tvBaseFare"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:textSize="11sp"/>

            <TextView
                android:text="@string/base_fare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textView6"
                android:textColor="@color/transparent_color"/>

            <TextView
                android:text="1500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/tvBaseFare"
                android:textColor="@color/black"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_8">
            <com.rezofy.views.custom_views.IconTextView
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tvTaxes"
                android:textColor="@color/black"
                android:textSize="11sp"/>
            <TextView
                android:text="@string/taxes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textView9"
                android:textColor="@color/transparent_color"/>

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/black"

                android:id="@+id/tvTaxes"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_8">
            <com.rezofy.views.custom_views.IconTextView
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tvTotal"
                android:textColor="@color/black"
                android:textSize="11sp"/>

            <TextView
                android:text="@string/total_payable_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textView17"
                android:textColor="@color/transparent_color"/>

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/tvTotal"
                android:textColor="@color/black"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pay_for_stay_color"
            android:padding="15dp"
            android:id="@+id/rlPayNow">

            <TextView
                android:text="@string/pay_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView25"
                android:textColor="@color/white"
                android:textSize="@dimen/txt12sp"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
    </layout>