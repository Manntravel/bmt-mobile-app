<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_25"
        android:orientation="vertical"
        android:padding="@dimen/padding_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Passenger(s)"
            android:textColor="@color/hint_color"
            android:textSize="@dimen/padding_16" />

        <TextView
            android:id="@+id/passenger_names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_25"
            android:text="Mr. Abhinav"
            android:textColor="@color/black"
            android:textSize="@dimen/padding_16" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/second_lay_"
            android:background="@drawable/bottom_line"

            android:padding="@dimen/padding_10">

            <RelativeLayout
                android:id="@+id/first_lay_again"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/fare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="\u20b9 8734"
                    android:textColor="@color/black" />


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fare"
                    android:text="You Paid"
                    android:textColor="@color/hint_color" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/second_lay_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_25"
                android:layout_toRightOf="@+id/first_lay_again">


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/last_lay_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/second_lay_again">

                <TextView
                    android:id="@+id/arrival_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="For Help"
                    android:textColor="@color/black"
                    android:textSize="@dimen/padding_10" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/arrival_time"
                    android:gravity="right"
                    android:text="Email: "
                    android:textColor="@color/black"
                    android:textSize="@dimen/padding_10" />

                <TextView
                    android:id="@+id/contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/email"
                    android:text="Phone: "
                    android:textColor="@color/black"
                    android:textSize="@dimen/padding_10" />

            </RelativeLayout>


        </RelativeLayout>


    </LinearLayout>

</LinearLayout>