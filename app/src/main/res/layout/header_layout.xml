<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"

    >
    <data>
        <variable
            name="concateVar"
            type="java.lang.String"></variable>
    </data>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.rezofy.views.custom_views.IconTextView
        android:id="@+id/left_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/icon_text_b"
        android:textColor="@android:color/white"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/left_icon"
        android:gravity="left|center_vertical"
        android:text="@string/header_title_text"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColor="@android:color/white"
        android:textSize="24sp" />
    <!--android:layout_toLeftOf="@+id/right_icon3"-->


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentRight="true">

    <com.rezofy.views.custom_views.IconTextView
        android:id="@+id/right_icon3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="true"
        android:gravity="center"
        android:paddingRight="10dp"
        android:paddingLeft="@dimen/padding_5"
        android:text="@string/icon_text_b"
        android:textColor="@android:color/white"
        android:textSize="26dp"
        android:visibility="gone"
         />

    <com.rezofy.views.custom_views.IconTextView
        android:id="@+id/right_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="true"
        android:gravity="center"
        android:paddingRight="15dp"
        android:paddingLeft="@dimen/padding_5"
        android:text="@string/icon_text_b"
        android:textColor="@android:color/white"
        android:textSize="26dp"
        android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>
    </layout>