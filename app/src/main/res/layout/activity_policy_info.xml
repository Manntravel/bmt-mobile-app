<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/busvoucherbg">
        <include
            layout="@layout/header_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/titleHeader"


            />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleHeader">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp">


                    <android.support.v7.widget.CardView
                        android:id="@+id/card_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="0dp"

                        >



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingRight="@dimen/padding_10"
                                android:paddingLeft="@dimen/padding_10"
                                android:orientation="vertical"
                                android:background="@color/white">
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="10dp"
                                    >

                                    <TextView
                                        android:text="@string/insuree_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/textView16"
                                        android:textColor="@color/transparent_color"/>

                                </RelativeLayout>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    >

                                    <TextView
                                        android:text="Vivek"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/tvInsureeName"
                                        android:textColor="@color/black"/>

                                </RelativeLayout>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="10dp">

                                    <TextView
                                        android:text="@string/policy_no"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/textView23"
                                        android:textColor="@color/transparent_color"/>

                                    <TextView
                                        android:text="@string/period_insured"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/textView21"
                                        android:layout_alignParentRight="true"
                                        android:textColor="@color/transparent_color"/>
                                </RelativeLayout>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:text="AS23DE347E"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/tvPolicyNo"
                                        android:textColor="@color/black"/>

                                    <TextView
                                        android:text="25-02-2017 to\n 25-04-2017"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/tvPeriodInsured"
                                        android:layout_alignParentRight="true"
                                        android:textColor="@color/black"/>
                                </RelativeLayout>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="20dp">

                                    <TextView
                                        android:text="@string/policy_provider"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/textView29"
                                        android:textColor="@color/transparent_color"/>
                                </RelativeLayout>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:text="Bajaj Insurance"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/tvPolicyProvider"
                                        android:textColor="@color/black"/>
                                </RelativeLayout>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="20dp">

                                    <TextView
                                        android:text="@string/country_travelling"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:textColor="@color/transparent_color"/>
                                </RelativeLayout>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:text="United States of America"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/tvCountryTravelling"
                                        android:textColor="@color/black"/>
                                </RelativeLayout>
                                <!--<View android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/seperator_bg"
                                    android:layout_marginBottom="20dp"
                                    android:layout_marginTop="20dp"></View>-->

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingBottom="10dp">

                                 <!--   <TextView
                                        android:text="@string/premium"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/tvOneOperatorAddr"
                                        android:textColor="@color/header_color"
                                        android:textSize="@dimen/big_text_size"/>-->
                                </RelativeLayout>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                </RelativeLayout>
                            </LinearLayout>


                    </android.support.v7.widget.CardView>


                </LinearLayout>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_10"
                    android:layout_alignParentBottom="true"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:background="@color/cancel_stay_color"
                        android:padding="16dp"
                        android:id="@+id/llCancelStay"
                        android:onClick="showMessage">

                        <TextView
                            android:text="@string/view_or_download"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView26"
                            android:textColor="@color/white"
                            android:textSize="@dimen/txt12sp"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@color/pay_for_stay_color"
                        android:padding="16dp"
                        android:id="@+id/llPayStay"
                        android:onClick="showMessage">

                        <TextView
                            android:text="@string/pay_premium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvPayTxt"
                            android:textColor="@color/white"
                            android:textSize="@dimen/txt12sp"
                            />

                    </LinearLayout>
                </TableRow>
            </RelativeLayout>


        <com.rezofy.utils.RoundedImageView
            android:id="@+id/btn_flaoting"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/chat_img"
            android:scaleType="fitXY"
            />
    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>