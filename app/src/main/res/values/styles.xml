<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>


    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#000000</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#000000</item>
        <!-- Used for the background -->
        <item name="android:background">#ffffff</item>
    </style>


    <style name="AppBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/triplist_bg</item>
    </style>
    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="dark_12_text" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12dp</item>

    </style>

    <style name="blackLight_12_text" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/blackLight</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12dp</item>

    </style>

    <style name="week_day_style" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14dp</item>

    </style>

    <!--  Transparent dialog -->
    <style name="TransparentProgressDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.Dialog" parent="@android:style/Theme.Dialog" />


    <style name="tab_text_style" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="MyEditTextTheme">
        <!-- Used for the bottom line when not selected / focused -->

        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
        <!--&  use the colorAccent color by default -->
    </style>

    <style name="SampleTheme" parent="Theme.AppCompat">
        <item name="colorAccent">@color/blue_first</item>
        <item name="android:textColorSecondary">@color/hint_color</item>
    </style>

    <style name="Theme.AppCompat.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="Theme.AppCompat.MyColor" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/white</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
    </style>

    <style name="Theme.AppCompat.CheckBoxStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="Theme.AppCompat.ReviewTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/dark_blue</item>
    </style>

    <style name="Theme.AppCompat.FareRuleStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/white</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
    </style>

    <style name="CustomTabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/blue_first</item>
        <item name="tabIndicatorColor">@color/blue_first</item>
        <item name="tabTextAppearance">@style/CustomTabTexStyle</item>
    </style>

    <style name="CustomTabTexStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/hint_color</item>
        <item name="textAllCaps">false</item>

    </style>

    <style name="TextLabel" parent="Widget.Design.TextInputLayout">
        <!-- Hint color and label color in FALSE state -->
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/black</item>
        <item name="colorControlNormal">@color/gray_e6e6e6</item>
        <item name="colorControlActivated">@color/gray_e6e6e6</item>
    </style>

</resources>
